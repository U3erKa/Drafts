{
  "extends": "../tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "checkJs": true,
    "alwaysStrict": true
  },
  "include": ["src"]
}
