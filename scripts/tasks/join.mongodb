// показать конкретную фирму и всех её рабочих
db.companies.aggregate([
  { $match: { name: 'Apple' } },
  {
    $lookup: {
      from: 'employee',
      localField: '_id',
      foreignField: 'companyId',
      as: 'staff',
    }
  },
  {
    $unset: [ 'staff.companyId', '_id', 'staff._id', ],
  },
]);
