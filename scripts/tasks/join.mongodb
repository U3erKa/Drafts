// создать коллекцию для фирм и работников
db.createCollection('companies', {
  validator: {
    $jsonSchema: {
      bsonType: 'object',
      required: [ 'name', 'stonks', ],
      properties: {
        name: {
          bsonType: 'string',
        },
        stonks: {
          bsonType: 'number',
        },
        foundedIn: {
          bsonType: 'int',
        },
      },
    }
  }
});

db.createCollection('employee', {
  validator: {
    $jsonSchema: {
      bsonType: 'object',
      required: [ 'companyId', 'name', 'salary', ],
      properties: {
        companyId: {
          bsonType: 'objectId',
        },
        fullName: {
          bsonType: 'string',
        },
        salary: {
          bsonType: 'number',
        },
      },
    }
  }
});

